# MyPaperAgent Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# Anthropic API Key (required for Claude Agent SDK)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Embedding Provider (choose ONE of the following)
# Option 1: Voyage AI (recommended for research papers)
# Get your key at: https://dash.voyageai.com/
VOYAGE_API_KEY=your_voyage_api_key_here

# Option 2: OpenAI (alternative for embeddings)
# Get your key at: https://platform.openai.com/
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# OPTIONAL API KEYS
# ============================================================================

# Semantic Scholar API Key (optional - increases rate limits)
# Get your key at: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Database
DATABASE_PATH=data/database/papers.db
VECTOR_DB_PATH=data/vector_db

# PDF Storage
PDF_STORAGE_PATH=data/papers
MAX_PDF_SIZE_MB=50

# RAG Configuration
EMBEDDING_MODEL=voyage-2  # Options: voyage-2, text-embedding-3-small
CHUNK_SIZE=800           # Size of text chunks for RAG (in tokens)
CHUNK_OVERLAP=100        # Overlap between chunks (in tokens)
TOP_K_RESULTS=5          # Number of results to retrieve for RAG queries

# OCR Settings
TESSERACT_PATH=          # Leave empty for auto-detection
OCR_LANGUAGE=eng         # Language code for Tesseract OCR

# API Rate Limiting
ANTHROPIC_MAX_RETRIES=3
API_RETRY_DELAY=1        # Initial retry delay in seconds
API_TIMEOUT=60           # API timeout in seconds

# Quiz Settings
DEFAULT_QUIZ_LENGTH=10
QUIZ_DIFFICULTY=adaptive  # Options: easy, medium, hard, adaptive

# Paper Discovery
DEFAULT_SEARCH_LIMIT=10
ARXIV_MAX_RESULTS=50
SEMANTIC_SCHOLAR_MAX_RESULTS=50

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Logging
LOG_LEVEL=INFO           # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/mypaperagent.log

# Debug Mode
DEBUG=false              # Set to true for verbose output

# Testing
TEST_DATABASE_PATH=:memory:
USE_MOCK_APIS=false      # Set to true to use mock APIs in tests
